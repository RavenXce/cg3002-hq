<h1>Welcome to The Console <small>Please login to proceed</small></h1>
<hr>
</br>
<%= form_tag sessions_path, :class => 'form-horizontal' do %>
<div class="form-group">
	<%= label_tag :login_code, 'ID', :class => 'col-sm-2 control-label' %>
	<div class="col-sm-9">
		<%= text_field_tag :login_code, params[:login_code], :class => 'form-control', :placeholder => 'Login Code' %>
	</div>
</div>
<div class="form-group">
	<%= label_tag :password, nil, :class => 'col-sm-2 control-label'  %>
	<div class="col-sm-9">
		<%= password_field_tag :password, nil, :class => 'form-control', :placeholder => 'Password' %>
	</div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
		<button type="submit" class="btn btn-success">
			Log in
		</button>
	</div>
</div>
<% end %>

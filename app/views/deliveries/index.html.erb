<%
 @page_header = "Deliveries"
  @page_sub_header = "overview"
  @breadcrumbs = [["Deliveries", deliveries_path], 'Overview']
%>
<div class="row">
	<div class="col-xs-12">
		<h3 class="header smaller lighter blue">Delivery Listing</h3>
		<div class="table-header">
			All Deliveries
		</div>
		<div class="table-responsive">
			<table id="all-deliveries-table" class="table table-striped table-bordered table-hover" data-source="<%= deliveries_url(format: "json")%>">
				<thead>
					<tr>
						<th class="center sorting_disabled"></th>
						<th>Delivery No. </th>
						<th>Shop ID </th>
						<th class="hidden-480">Country </th>
						<th class="hidden-480"><i class="icon-time bigger-110 hidden-480"></i> Travel Time </th>
						<th><i class="icon-time bigger-110"></i> ETA </th>
						<th>Status </th>
						<th class="sorting_disabled"></th>
					</tr>
				</thead>
				<tbody></tbody>
			</table>
		</div>
	</div>
</div>